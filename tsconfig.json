{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "declaration": false,
    "listFiles": false
  },
  "exclude": [
    ".vscode",
    ".serverless",
    ".git",
    "node_modules",
    ".build"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  },
  "lib": [
    "es5",
    "es2015.promise"
  ],
  "include": ["src", "test"]
}